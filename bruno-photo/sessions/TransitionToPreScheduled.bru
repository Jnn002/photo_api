meta {
  name: Transition To Pre-scheduled
  type: http
  seq: 5
}

post {
  url: {{back}}/sessions/:session_id/transition
  body: json
  auth: inherit
}

params:path {
  session_id: 5
}

headers {
  Authorization: Bearer {{token}}
}

body:json {
  {
    "to_status": "Confirmed",
    "reason": "He atendio",
    "notes": "Pendiente asignar fotografos"
  }
}

tests {
  test("should return 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("should transition to Pre-scheduled", function() {
    const data = res.body;
    expect(data.status).to.equal('Pre-scheduled');
    expect(data).to.have.property('payment_deadline');
    expect(data).to.have.property('changes_deadline');
  });
}
