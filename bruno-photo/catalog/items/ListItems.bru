meta {
  name: List Items
  type: http
  seq: 2
}

get {
  url: {{back}}/items?active_only=true&limit=100&offset=0
  body: none
  auth: inherit
}

params:query {
  active_only: true
  limit: 100
  offset: 0
}

headers {
  Authorization: Bearer {{token}}
}

tests {
  test("should return 200", function() {
    expect(res.status).to.equal(200);
  });

  test("should return array of items", function() {
    const data = res.body;
    expect(Array.isArray(data)).to.be.true;
  });
}
